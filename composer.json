{
    "name": "bluzphp/skeleton",
    "description": "Skeleton for Bluz, a lightweight PHP framework",
    "type": "library",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/bluzphp/framework"
        }
    ],
    "require": {
        "php": ">=5.4",
        "bluzphp/framework": "dev-master"
    },
    "config": {
        "vendor-dir": "library"
    },
    "autoload": {
        "psr-0": {
            "Application": "application/models"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "chmod a+w ./data/cache/",
            "chmod a+w ./data/logs/",
            "chmod a+w ./data/sessions/",
            "chmod a+w ./data/uploads/",
            "cp ./application/configs/app.dev.sample.php ./application/configs/app.dev.php",
            "cp ./public/.htaccess.dev.sample ./public/.htaccess"
        ]
    },
    "authors": [
        {
            "name": "Anton Shevchuk",
            "email": "AntonShevchuk@gmail.com"
        },
        {
            "name": "Eugene Zabolotniy",
            "email": "realbaziak@gmail.com"
        },
        {
            "name": "Maks Slesarenko"
        },
        {
            "name": "EagleMoor"
        }
    ],
    "support": {
        "email": "AntonShevchuk@gmail.com",
        "issues": "https://github.com/bluzphp/bluz/issues",
        "wiki": "https://github.com/bluzphp/bluz/wiki"
    },
    "license": "MIT"
}
